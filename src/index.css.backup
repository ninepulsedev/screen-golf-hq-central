@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

@import "tailwindcss";

/* 황금비율 기반 디자인 시스템 변수 */
:root {
  /* 황금비율 간격 시스템 (1:1.618) */
  --spacing-xs: 4px;
  /* 기본 단위 */
  --spacing-sm: 8px;
  /* 2xs */
  --spacing-md: 16px;
  /* 4xs - 기본 간격 */
  --spacing-lg: 26px;
  /* 6.5xs - 황금비율 적용 */
  --spacing-xl: 42px;
  /* 10.5xs */
  --spacing-2xl: 68px;
  /* 17xs */

  /* 타이포그래피 스케일 (황금비율 기반) */
  --text-xs: 12px;
  /* 0.75rem */
  --text-sm: 14px;
  /* 0.875rem */
  --text-base: 16px;
  /* 1rem */
  --text-lg: 20px;
  /* 1.25rem */
  --text-xl: 26px;
  /* 1.625rem */
  --text-2xl: 32px;
  /* 2rem */
  --text-3xl: 42px;
  /* 2.625rem */

  /* 아이콘 크기 시스템 */
  --icon-xs: 16px;
  /* w-4 h-4 */
  --icon-sm: 20px;
  /* w-5 h-5 */
  --icon-md: 32px;
  /* w-8 h-8 */
  --icon-lg: 48px;
  /* w-12 h-12 */

  /* 색상 시스템 */
  --color-primary: #06B6D4;
  /* Cyan-500 */
  --color-secondary: #10B981;
  /* Emerald-500 */
  --color-accent: #F59E0B;
  /* Amber-500 */
  --color-success: #10B981;
  /* Emerald-500 */
  --color-warning: #F59E0B;
  /* Amber-500 */
  --color-error: #EF4444;
  /* Red-500 */

  /* 중성색 스케일 */
  --color-gray-50: #F9FAFB;
  --color-gray-100: #F3F4F6;
  --color-gray-200: #E5E7EB;
  --color-gray-300: #D1D5DB;
  --color-gray-400: #9CA3AF;
  --color-gray-500: #6B7280;
  --color-gray-600: #4B5563;
  --color-gray-700: #374151;
  --color-gray-800: #1F2937;
  --color-gray-900: #111827;

  /* 배경색 */
  --bg-primary: #030712;
  /* Gray-950 */
  --bg-secondary: #1F2937;
  /* Gray-800 */
  --bg-tertiary: #374151;
  /* Gray-700 */

  /* 테두리 및 그림자 */
  --border-color: #374151;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);

  /* 곡률 */
  --radius-sm: 0.375rem;
  /* 6px */
  --radius-md: 0.5rem;
  /* 8px */
  --radius-lg: 0.75rem;
  /* 12px */
  --radius-xl: 1rem;
  /* 16px */
}

@layer base {
  * {
    border-color: var(--border-color);
  }

  body {
    background-color: var(--bg-primary);
    color: #ffffff;
    font-family: 'Inter', system-ui, sans-serif;
  }
}

@layer components {
  /* 표준화된 컴포넌트 클래스 */

  /* 카드 시스템 */
  .card-primary {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
  }

  .card-secondary {
    background-color: rgba(55, 65, 81, 0.3);
    border: 1px solid rgba(75, 85, 99, 0.3);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
  }

  .card-tertiary {
    background-color: rgba(31, 41, 55, 0.3);
    border: 1px solid rgba(55, 65, 81, 0.3);
    border-radius: var(--radius-sm);
    padding: var(--spacing-sm);
  }

  /* 버튼 시스템 */
  .btn-primary {
    background-color: var(--color-primary);
    color: white;
    padding: 12px 24px;
    border-radius: var(--radius-md);
    font-weight: 500;
    font-size: var(--text-sm);
    transition: all 0.2s ease-in-out;
    box-shadow: var(--shadow-sm);
  }

  .btn-primary:hover {
    background-color: #0891B2;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-secondary {
    background-color: var(--bg-tertiary);
    color: #D1D5DB;
    padding: 8px 16px;
    border-radius: var(--radius-sm);
    font-weight: 500;
    font-size: var(--text-sm);
    transition: all 0.2s ease-in-out;
  }

  .btn-secondary:hover {
    background-color: #4B5563;
    color: white;
  }

  .btn-small {
    padding: 6px 12px;
    font-size: var(--text-xs);
    border-radius: var(--radius-sm);
  }

  /* 아이콘 시스템 */
  .icon-xs {
    width: var(--icon-xs);
    height: var(--icon-xs);
  }

  .icon-sm {
    width: var(--icon-sm);
    height: var(--icon-sm);
  }

  .icon-md {
    width: var(--icon-md);
    height: var(--icon-md);
  }

  .icon-lg {
    width: var(--icon-lg);
    height: var(--icon-lg);
  }

  /* 타이포그래피 */
  .text-h1 {
    font-size: var(--text-2xl);
    font-weight: 700;
    line-height: 1.2;
    color: white;
  }

  .text-h2 {
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: 1.3;
    color: white;
  }

  .text-h3 {
    font-size: var(--text-base);
    font-weight: 500;
    line-height: 1.4;
    color: white;
  }

  .text-body {
    font-size: var(--text-sm);
    line-height: 1.5;
    color: #9CA3AF;
  }

  .text-caption {
    font-size: var(--text-xs);
    line-height: 1.4;
    color: #6B7280;
  }

  /* 간격 유틸리티 */
  .space-golden-sm {
    padding: var(--spacing-md);
  }

  .space-golden-md {
    padding: var(--spacing-lg);
  }

  .space-golden-lg {
    padding: var(--spacing-xl);
  }

  /* 상태 색상 */
  .text-primary {
    color: var(--color-primary);
  }

  .text-secondary {
    color: var(--color-secondary);
  }

  .text-accent {
    color: var(--color-accent);
  }

  .text-success {
    color: var(--color-success);
  }

  .text-warning {
    color: var(--color-warning);
  }

  .text-error {
    color: var(--color-error);
  }

  .bg-primary {
    background-color: var(--color-primary);
  }

  .bg-secondary {
    background-color: var(--color-secondary);
  }

  .bg-accent {
    background-color: var(--color-accent);
  }

  /* 모바일 전용 컴포넌트 클래스 */
  .mobile-card {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 640px) {
    .mobile-card {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .mobile-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(55, 65, 81, 0.5);
  }

  .mobile-card-title {
    color: white;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .mobile-card-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .mobile-table-row {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 0.75rem;
  }

  .mobile-table-cell {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .mobile-table-label {
    color: #9CA3AF;
    font-size: 0.75rem;
  }

  .mobile-table-value {
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .mobile-chart-container {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 0.75rem;
    height: 12rem;
  }

  @media (min-width: 640px) {
    .mobile-chart-container {
      height: 16rem;
    }
  }

  .mobile-stats-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  @media (min-width: 320px) {
    .mobile-stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .mobile-stat-card {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1rem;
  }

  .mobile-stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .mobile-stat-label {
    font-size: 0.75rem;
    color: #9CA3AF;
    margin-top: 0.25rem;
  }

  .mobile-button {
    min-height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #06B6D4;
    color: white;
    border-radius: 0.5rem;
    transition: all 0.2s ease-in-out;
  }

  .mobile-button:hover {
    background-color: #0891B2;
  }

  .mobile-input {
    min-height: 44px;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    background-color: rgba(31, 41, 55, 0.5);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    color: white;
  }

  .mobile-input::placeholder {
    color: #9CA3AF;
  }

  .mobile-input:focus {
    outline: none;
    border-color: #06B6D4;
  }

  .mobile-nav {
    position: fixed;
    inset: 0;
    z-index: 50;
    background-color: rgba(17, 24, 39, 0.95);
    backdrop-filter: blur(12px);
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  .mobile-nav-open {
    transform: translateX(0);
  }

  .mobile-nav-closed {
    transform: translateX(-100%);
  }

  .mobile-nav-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 40;
    transition: opacity 0.3s;
  }

  .mobile-menu-button {
    min-height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9CA3AF;
    transition: color 0.2s;
  }

  .mobile-menu-button:hover {
    color: white;
  }

  .mobile-hidden {
    display: none;
  }

  @media (min-width: 640px) {
    .mobile-hidden {
      display: block;
    }
  }

  .mobile-only {
    display: block;
  }

  @media (min-width: 640px) {
    .mobile-only {
      display: none;
    }
  }

  /* 기존 클래스 유지 */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn:focus-visible {
    outline: 2px solid transparent;
    outline-offset: 2px;
    box-shadow: 0 0 0 2px #3b82f6;
  }

  .btn:disabled {
    pointer-events: none;
    opacity: 0.5;
  }

  .btn-primary {
    background-color: #2563eb;
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-primary:hover {
    background-color: #1d4ed8;
  }

  .btn-secondary {
    background-color: #1f2937;
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    background-color: #374151;
  }

  .btn-outline {
    border: 1px solid #374151;
    background-color: transparent;
    color: white;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .btn-outline:hover {
    background-color: #374151;
  }

  .card {
    border-radius: 0.5rem;
    border: 1px solid #374151;
    background-color: #1f2937;
    color: white;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .input {
    display: flex;
    height: 2.25rem;
    width: 100%;
    border-radius: 0.375rem;
    border: 1px solid #374151;
    background-color: #1f2937;
    color: white;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    font-size: 0.875rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    transition: all 0.2s ease-in-out;
  }

  .input:focus-visible {
    outline: 2px solid transparent;
    outline-offset: 2px;
    box-shadow: 0 0 0 2px #3b82f6;
  }

  .input:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .input::placeholder {
    color: #9ca3af;
  }

  .input:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  /* 모바일 로그인 최적화 CSS */
  .mobile-login-container {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }

  .mobile-card {
    background-color: rgba(31, 41, 55, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 12px;
    padding: 24px;
  }

  .input-group {
    margin-bottom: 16px;
  }

  .mobile-label {
    display: block;
    margin-bottom: 8px;
    font-size: 14px;
    color: #9CA3AF;
    font-weight: 500;
  }

  .mobile-input {
    width: 100%;
    min-height: 44px;
    padding: 12px 16px;
    font-size: 16px;
    border-radius: 8px;
    border: 1px solid #374151;
    background-color: #1f2937;
    color: white;
    transition: all 0.2s ease;
  }

  .mobile-input:focus {
    outline: none;
    border-color: #06B6D4;
    box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
  }

  .mobile-button {
    width: 100%;
    min-height: 44px;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .mobile-button.primary {
    background-color: #06B6D4;
    color: white;
    border: none;
  }

  .mobile-button.primary:hover {
    background-color: #0891B2;
  }

  .mobile-button.secondary {
    background-color: #374151;
    color: white;
    border: none;
  }

  .mobile-button.outline {
    background-color: transparent;
    color: #9CA3AF;
    border: 1px solid #374151;
  }

  .mobile-error {
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    padding: 12px;
    color: #FCA5A5;
    font-size: 14px;
  }

  /* 반응형 */
  @media (max-width: 640px) {
    .mobile-login-container {
      padding: 0 16px;
    }

    .mobile-card {
      padding: 20px;
    }
  }

  @media (max-width: 320px) {
    .mobile-card {
      padding: 16px;
    }

    .mobile-input {
      font-size: 14px;
      padding: 10px 12px;
    }
  }
}
}